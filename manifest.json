{
    "manifest_version": 2,

    "name": "Facebook AutoPoker",
    "version": "0.0.0",
    "description": "Automatically poke other users on Facebook.",
    "author": "Ahto",

    "icons": {
        "16":  "icons/gearfinger-16.png",
        "48":  "icons/gearfinger-48.png",
        "128": "icons/gearfinger-128.png"
    },

    "permissions": [],
    "optional_permissions": [],

    "content_scripts": [
        {
            "matches" : [
                "http://www.facebook.com/pokes/*",
                "https://www.facebook.com/pokes/*"
            ],

            "js": ["contentScript.js"],
            "css": []
        }
    ]
}
